{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "maven"
      ],
      "registryUrls": [
        "https://maven.google.com",
        "https://repo1.maven.org/maven2/",
        "https://plugins.gradle.org/m2/",
        "https://jitpack.io"
      ]
    },
    {
      "groupName": "androidx.test",
      "matchPackageNames": [
        "androidx.test:*"
      ],
      "prBodyNotes": [
        "### Release Notes ({{{ replace '.*:' '' packageName }}})\n\nhttps://developer.android.com/jetpack/androidx/releases/test#{{{ replace '-ktx' '' (replace '.*:' '' packageName) }}}-{{{newVersion}}}"
      ]
    }
  ]
}
