{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "maven"
      ],
      "registryUrls": [
        "https://maven.google.com",
        "https://repo1.maven.org/maven2/",
        "https://plugins.gradle.org/m2/",
        "https://jitpack.io"
      ]
    },
    {
      "groupName": "androidx.activity",
      "matchPackageNames": [
        "androidx.activity:*"
      ],
      "prBodyNotes": [
        "### Release Notes ({{{ replace '.*:' '' packageName }}})\n\nhttps://developer.android.com/jetpack/androidx/releases/activity#{{{ replace '-ktx' '' (replace '.*:' '' packageName) }}}-{{{newVersion}}}"
      ]
    },
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle"
      ],
      "prBodyNotes": [
        "### Release Notes\n\nhttps://developer.android.com/build/releases/gradle-plugin#android-gradle-plugin-{{{newVersion}}}"
      ]
    },
    {
      "matchPackageNames": [
        "com.google.guava:guava"
      ],
      "allowedVersions": "/.*-android$/",
      "prBodyNotes": [
        "### Release Notes\n\nhttps://github.com/google/guava/releases/tag/v{{{ replace '-android' '' newVersion }}}"
      ]
    },
    {
      "groupName": "androidx.test",
      "matchPackageNames": [
        "androidx.test:*"
      ],
      "prBodyNotes": [
        "### Release Notes ({{{ replace '.*:' '' packageName }}})\n\nhttps://developer.android.com/jetpack/androidx/releases/test#{{{ replace '-ktx' '' (replace '.*:' '' packageName) }}}-{{{newVersion}}}"
      ]
    }
  ]
}
